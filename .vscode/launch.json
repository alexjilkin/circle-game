    "version": "0.2.0",
    "configurations": [
        {
            "name": "Game",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/CircleGame/bin/Debug/netcoreapp3.1/CircleGame.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CircleGame",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildapi",
            "program": "${workspaceFolder}/CircleGameApi/bin/Debug/net5.0/CircleGameApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CircleGameApi",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ],
    "compounds": [
        {
            "name": "Game/Api",
            "configurations": ["Game", "Api"]
        }
    ]
}